<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:contentDescription="@string/pie_icon"
        android:id="@+id/iv_widget_ingredient_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/ic_vector_pink_cupcake" />

    <TextView
        android:id="@+id/tv_widget_recipe_name"
        android:layout_width="match_parent"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:layout_weight="1"
        tools:text="@string/stub_recipe_name"/>

</LinearLayout>