<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/steps_list_fragment"
        android:name="org.meerkatdev.bakingapp.ui.StepsListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/step_content_fragment"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/step_content_fragment"
        android:name="org.meerkatdev.bakingapp.ui.StepContentFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="946dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/steps_list_fragment"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>